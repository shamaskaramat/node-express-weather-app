<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerlinks}}
    <title>Weather</title>
</head>

<body>
    {{>navbar}}
    <div class="container-fluid main_menu1">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
               <div class="main_content">
                   <form class="temp_form">
                       <input type="text" id="cityName" placeholder="Enter Your City Name" autocomplete="off">
                       <input type="submit" value="search" id="submitBtn">
                   </form>
               </div>
               <div class="temInformation">
                   <div class="top_layer">
                       <p id="day">Tuesday</p>
                       <p id="today_data">9 Feb</p>
                   </div>
                   <div class="main_layer ">
                       <p id="city_name">Get Output Here</p>
                       <div class="middle_layer data_hide">
                           <p id="temp"><span id="temp_real">0</span><sup>o</sup>C</p>
                           <p id="temp_status"><i class="fa fa-cloud" aria-hidden="true"></i></p>
                       </div>
                   </div>
               </div>
            </div>
        </div>
    </div>
    {{>footer}}
    <script src="js/main.js"></script>
    <script>
        const getCurrentDay = () =>{
            let weekday= new array(7);
            weekday[0]="Sunday";
            weekday[1]="Monday";
            weekday[2]="Tuesxxxday";
            weekday[3]="Wednesday";
            weekday[4]="Thurday";
            weekday[5]="Friday";
            weekday[6]="Sturday";   
            let currentTime= new Date();
            days=weekday[currentTime.getDate()];
            let day = document.getElementById('day')
            day.innerText = days;
        }
    </script>
</body>
</html>